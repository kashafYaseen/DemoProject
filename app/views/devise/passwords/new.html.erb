

    <div class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4"><%= t('.forgot_your_password') %></h3></div>
                                    <div class="card-body">

                                      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                                        <%= bootstrap_devise_error_messages! %>

                                        <div class="form-group">
                                          <%= f.label :email %>
                                          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
                                        </div>

                                        <div class="form-group">
                                          <%= f.submit t('.send_me_reset_password_instructions'), class: 'btn btn-primary' %>
                                        </div>
                                      <% end %>         
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><%= render 'devise/shared/links' %></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>