<div class="container-fluid px-4">
            <h1 class="mt-4">Restaurant Orders</h1>
            <div class="card mb-4">
            </div>
            <div class="card mb-4">
              <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Orders
              </div>
              <div class="card-body">
                <table id="datatablesSimple">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Customer Name</th>
                      <th>Location</th>
                      <th>Order Date</th>
                      <th>Status</th>
                      <th>Payment</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @order.each do |ordr| %>
                      <tr>
                        <td class="counterCell"></td>
                        <td><%= ordr.customer.first_name %></td>
                        <td><%= ordr.customer.address %></td>
                        <td><%= ordr.created_at %></td>
                        <td><%= ordr.order_status%></td>
                        <td><%= ordr.payment.total_payment %></td>
                        <td><%= button_to "Delete", :method => :delete %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
</div>
