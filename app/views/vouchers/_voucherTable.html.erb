<div class="container-fluid px-4">
  <h1 class="mt-4">Restaurant Vouchers</h1>
    <div class="card mb-4">
    </div>

    <div class="card mb-4">
      <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Vouchers
        <%= button_to "Add New Voucher", vouchers_new_path, :method => :get, class:"rightButton" %>
      </div>

      <div class="card-body">
        <table id="datatablesSimple">
          <thead>
            <tr>
              <th>ID</th>
              <th>Promo Code</th>
              <th>Status</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Discount</th>
              <th>Discount Type</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <%= render 'tableForm' %>
          </tbody>

        </table>
      </div>

    </div>

</div>
