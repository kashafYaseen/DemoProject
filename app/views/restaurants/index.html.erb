<h1>Restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Restaurant name</th>
      <th>Restaurant contactno</th>
      <th>Restaurant status</th>
      <th>Restaurant timings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.restaurant_name %></td>
        <td><%= restaurant.restaurant_contactNo %></td>
        <td><%= restaurant.restaurant_status %></td>
        <td><%= restaurant.restaurant_timings %></td>
        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

