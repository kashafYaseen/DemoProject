<div class="container-fluid px-4">
  <h1 class="mt-4">Restaurant Ratings</h1>
    <div class="card mb-4">
    </div>

    <div class="card mb-4">
      <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Ratings
      </div>

      <div class="card-body">
        <div class="row">
          <div class="col-6">
            <%= form_with url: "/reviews", method: :get do |form| %>
              entries per page
              <%= select_tag "per_page", options_for_select([5,10,20,50], :selected=>params[:per_page]),  { onchange: "this.form.submit();"} %>
            <% end %>
          </div>
          <div class="col-6">
            <%= render 'search_form' %>
          </div>
        </div>
        <br/>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>ID</th>
              <th><%= sort_link @q, :order_customer_full_name, "Customer", class:"sort-header"%></th>
              <th><%= sort_link @q, :order_order_descr, "Order Description", class:"sort-header"%></th>
              <th><%= sort_link @q, :rating_desc, "Rating", class:"sort-header"%></th>
              <th><%= sort_link @q, :remarks, "Remarks", class:"sort-header"%></th>
            </tr>
          </thead>

          <tbody>
            <%= render 'table_form' %>
          </tbody>

        </table>

        <%= pagy_bootstrap_nav(@pagy).html_safe %>
      </div>

    </div>

</div>
